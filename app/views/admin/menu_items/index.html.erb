<%= content_tag :div, :class => 'page-header' do %>
  <%= content_tag :h1 do %>
  Menu Admin
  <% end %>
<% end %>

<% @menu_items.each do |m| -%>
  <ul>
  <li><%= "#{m.label.titleize}" %>
      <%= link_to("<i class='icon-play-circle icon-white'></i>&nbsp; Create Submenu".html_safe,
                  new_admin_menu_item_path(:parent_id => m.id),
                  :id => "#{m.id}_add_child",
                  :title => 'add-child',
                  :class => 'btn btn-success') %>
      <%= link_to("<i class='icon-edit icon-white'></i>&nbsp; Edit Submenu".html_safe,
                  edit_admin_menu_item_path(m), :class => 'btn btn-primary') %>
      <%= link_to("<i class='icon-trash icon-white'></i>&nbsp; Delete Submenu".html_safe, admin_menu_item_path(m),
                                                      :confirm => 'Are you sure?',
                                                      :method => :delete, :class => 'btn btn-warning') %>
    <ul>
      <%= raw(draw_menu_tree(m)) %>
    </ul>
    </li>
  </ul>
<% end -%>

<%= link_to "<i class='icon-play-circle icon-white'></i>&nbsp;Add a Menu".html_safe, new_admin_menu_item_url, :class => 'btn btn-success' %>
