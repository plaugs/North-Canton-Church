<div class='page-header'>
  <h1>Page List</h1>
</div>
<table class="table table-striped table-bordered">
  <tr>
	<thead>
    <th>Title</th>
    <th>URL Tag</th>
    <th>Last Modified</th>
    <th>Actions</th>
    </thead>
  </tr>

<% @pages.each do |page| %>
<tbody>
  <tr id="page_<%= page.id %>">

    <td><%= page.title %></td>
    <td><%= page.url_tag %></td>
    <td><%= page.updated_at.strftime("%d-%B-%Y %I:%M%p") %></td>
    <td><%= link_to "<i class='icon-edit icon-white'></i>&nbsp;Edit".html_safe, edit_admin_page_path(page), :class => 'btn btn-primary' %>
	    <%= link_to "<i class='icon-time icon-white'></i>&nbsp;Restore".html_safe, admin_page_path(page), :class => 'btn btn-warning' %>        
        <%= link_to "<i class='icon-trash icon-white'></i>&nbsp;Delete".html_safe,
                    [:admin, page], :confirm => 'Are you sure?', :method => :delete, :id => "destroy_#{page.id}", :class => 'btn btn-danger delete-page',
 					"data-content" => 'This will irreversibly delete this page.', "data-original-title" => 'Are You Sure?' %>

    </td>
  </tr>
</tbody>
<% end %>
</table>
<br />
<%= will_paginate @pages %>
<hr>
<%= link_to "<i class='icon-play-circle icon-white'></i>&nbsp;Add a Page".html_safe, new_admin_page_url, :class => 'btn btn-success' %>
<script type="text/javascript">
  $('.delete-page').popover();
</script>