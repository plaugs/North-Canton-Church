<%= content_tag :table, :class => "table table-striped table-bordered" do %>
  <thead>
    <%= content_tag :tr do %>
      <%= content_tag :th, 'Drag an image to insert' %>
    <% end %>
  </thead>
  <tbody>
    <tr><td>
    <% @images.each do |image| %>
      <%= image_tag image.image.large.url, :width => 50, :class => 'image-item', :id => dom_id(image) %>
    <% end %>
    </td></tr>
  </tbody>
<% end %>